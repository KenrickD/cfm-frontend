@model cfm_frontend.ViewModels.LicenseValidationViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] | CFM System</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <link rel="icon" href="~/assets/images/favicon.svg" type="image/x-icon">
    <link rel="stylesheet" href="~/assets/fonts/inter/inter.css" id="main-font-link" />
    <link rel="stylesheet" href="~/assets/fonts/tabler-icons.min.css" />
    <link rel="stylesheet" href="~/assets/fonts/feather.css" />
    <link rel="stylesheet" href="~/assets/fonts/fontawesome.css" />
    <link rel="stylesheet" href="~/assets/fonts/material.css" />
    <link rel="stylesheet" href="~/assets/css/style.css" id="main-style-link" />
    <link rel="stylesheet" href="~/assets/css/style-preset.css" />
</head>

<body data-pc-preset="preset-1" data-pc-sidebar-caption="true" data-pc-direction="ltr" data-pc-theme_contrast="" data-pc-theme="dark">
    <div class="loader-bg">
        <div class="loader-track">
            <div class="loader-fill"></div>
        </div>
    </div>
    <div class="auth-main v2">
        <div class="bg-overlay bg-dark"></div>
        <div class="auth-wrapper">
            <div class="auth-sidecontent">
                <div class="auth-sidefooter">
                    <img src="~/assets/images/cfm-system-logo.png" class="w-25 mb-4 img-fluid" alt="CFM System Logo" />
                    <hr class="mb-3 mt-4" />
                    <div class="row">
                        <div class="col my-1">
                            <p class="m-0">
                                Copyright &copy; 2024 <a href="https://colliers.id" target="_blank"> PT. Colliers International Indonesia</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="auth-form">
                <div class="card my-5 mx-3" style="background-color: #2d3035;">
                    <div class="m-3">
                        <a href="@Url.Action("Index", "Login")" type="button"
                           class="d-inline-flex btn btn-outline-secondary justify-content-center align-items-center gap-2">
                            <i class="fa fa-chevron-left fa-xs"></i>
                            Back to Login
                        </a>
                    </div>

                    <div class="card-body">
                        <img src="~/assets/images/cfm-system-logo.png" class="w-25 mb-4 img-fluid" alt="CFM System Logo" />
                        <h4 class="f-w-500 mb-1 text-white">Create an Account</h4>
                        <p class="mb-3 text-muted">
                            Enter your license key to proceed with registration.
                        </p>

                        <form asp-controller="Registration" asp-action="ValidateLicense" method="post">
                            @Html.AntiForgeryToken()

                            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center" role="alert">
                                <i class="ti ti-alert-circle me-2"></i>
                            </div>

                            <div class="form-group mb-3">
                                <label class="form-label text-white">License Key</label>
                                <div class="d-flex align-items-center gap-2">
                                    <input asp-for="Key1" id="key1" class="form-control bg-transparent text-white text-center text-uppercase"
                                           maxlength="4" placeholder="XXXX" style="width: 70px;" />
                                    <span class="text-white">-</span>
                                    <input asp-for="Key2" id="key2" class="form-control bg-transparent text-white text-center text-uppercase"
                                           maxlength="4" placeholder="XXXX" style="width: 70px;" />
                                    <span class="text-white">-</span>
                                    <input asp-for="Key3" id="key3" class="form-control bg-transparent text-white text-center text-uppercase"
                                           maxlength="4" placeholder="XXXX" style="width: 70px;" />
                                    <span class="text-white">-</span>
                                    <input asp-for="Key4" id="key4" class="form-control bg-transparent text-white text-center text-uppercase"
                                           maxlength="4" placeholder="XXXX" style="width: 70px;" />
                                </div>
                                <span asp-validation-for="Key1" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="LicensePassword" class="form-label text-white">License Password</label>
                                <input asp-for="LicensePassword" type="password" class="form-control bg-transparent text-white" placeholder="Enter license password" />
                                <span asp-validation-for="LicensePassword" class="text-danger small"></span>
                            </div>

                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-primary">Proceed</button>
                            </div>

                            <div class="text-center mt-3">
                                <p class="text-muted">
                                    Already have an account?
                                    <a href="@Url.Action("Index", "Login")" class="link-primary">Sign In</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/js/plugins/popper.min.js"></script>
    <script src="~/assets/js/plugins/simplebar.min.js"></script>
    <script src="~/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/assets/js/fonts/custom-font.js"></script>
    <script src="~/assets/js/pcoded.js"></script>
    <script src="~/assets/js/plugins/feather.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/assets/js/pages/registration.js"></script>
</body>
</html>
