@model List<cfm_frontend.Models.WorkRequest.WorkRequestFilterModel.OtherCategoryModel>

@{
    ViewBag.Title = "Other Category List";
    ViewBag.pTitle = "Settings";
    ViewBag.cTitle = "Other Category List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/assets/css/settings-inline-editor.css" />
}

<div class="row">
    <div class="col-sm-12">
        <!-- Page Header -->
        <div class="page-header-title mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="m-b-10">List of Other Category</h5>
                    <p class="m-b-0 text-muted">Manage secondary categorization options for work requests</p>
                </div>
                <div>
                    <a href="/Helpdesk/Settings" class="btn btn-outline-secondary btn-sm">
                        <i class="ti ti-arrow-left me-1"></i>
                        Back to Settings
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats and Search -->
        <div class="stats-section">
            <div class="total-count">
                Showing total of <strong><span id="totalCount">0</span></strong> Other Categories
            </div>
            <div class="search-box">
                <input type="text"
                       class="form-control form-control-sm"
                       id="searchInput"
                       placeholder="Search categories...">
            </div>
        </div>

        <!-- Add New Section -->
        <div class="card mb-3" id="addNewSection">
            <div class="card-body">
                <div class="d-flex align-items-start">
                    <div class="flex-grow-1">
                        <button type="button" class="btn btn-primary" id="showAddFormBtn">
                            <i class="ti ti-plus me-1"></i>
                            Add New Other Category
                        </button>
                    </div>
                </div>
                <div id="addNewForm" style="display: none; margin-top: 1rem;">
                    <div class="d-flex align-items-start">
                        <div class="flex-grow-1 me-2">
                            <label class="form-label small text-muted mb-1">Other Category Name</label>
                            <input type="text"
                                   class="form-control"
                                   id="newItemName"
                                   placeholder="Enter category name..."
                                   maxlength="200">
                            <div class="invalid-feedback" id="addValidationError"></div>
                        </div>
                        <div style="margin-top: 1.75rem;">
                            <button type="button" class="btn btn-success btn-action me-1" id="saveNewBtn">
                                <i class="ti ti-check me-1"></i>
                                Save
                            </button>
                            <button type="button" class="btn btn-secondary btn-action" id="cancelNewBtn">
                                <i class="ti ti-x me-1"></i>
                                Cancel
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Table -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Description</h6>
            </div>
            <div class="card-body" id="categoryTableBody">
                <div class="empty-state" id="emptyState">
                    <i class="ti ti-folder-off"></i>
                    <p>No other categories found</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this other category?</p>
                <p class="text-muted small mb-0">
                    <strong id="deleteItemName"></strong>
                </p>
                <p class="text-danger small mt-2 mb-0">
                    <i class="ti ti-alert-triangle me-1"></i>
                    This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/js/pages/settings/settings-inline-base.js"></script>
    <script>
        $(document).ready(function () {
            SettingsInlineEditor.create({
                entityName: 'Other Category',
                entityNamePlural: 'Other Categories',
                apiEndpoints: {
                    list: '/Helpdesk/Settings/GetOtherCategories',
                    create: '/Helpdesk/Settings/CreateOtherCategory',
                    update: '/Helpdesk/Settings/UpdateOtherCategory',
                    delete: '/Helpdesk/Settings/DeleteOtherCategory'
                }
            });
        });
    </script>
}
