@model List<cfm_frontend.Models.WorkRequest.WorkRequestFilterModel.OtherCategoryModel>

@{
    ViewBag.Title = "Other Category 2 List";
    ViewBag.pTitle = "Settings";
    ViewBag.cTitle = "Other Category 2 List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/assets/css/settings-inline-editor.css" />
}

<div class="row">
    <div class="col-sm-12">
        <!-- Page Header -->
        <div class="page-header-custom mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-1">
                        <i class="ti ti-list-check me-2"></i>
                        List of Other Category 2
                    </h4>
                    <p class="mb-0 opacity-75">Define tertiary categorization for detailed work classification</p>
                </div>
                <div>
                    <a href="/Helpdesk/Settings" class="btn btn-light btn-sm">
                        <i class="ti ti-arrow-left me-1"></i>
                        Back to Settings
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats and Search -->
        <div class="stats-section">
            <div class="total-count">
                Showing total of <strong><span id="totalCount">0</span></strong> Other Categories 2
            </div>
            <div class="search-box">
                <input type="text"
                       class="form-control form-control-sm"
                       id="searchInput"
                       placeholder="Search categories...">
            </div>
        </div>

        <!-- Add New Section -->
        <div class="add-new-section" id="addNewSection">
            <div class="d-flex align-items-start">
                <div class="flex-grow-1">
                    <button type="button" class="btn btn-primary" id="showAddFormBtn">
                        <i class="ti ti-plus me-1"></i>
                        Add New Other Category 2
                    </button>
                </div>
            </div>
            <div id="addNewForm" style="display: none; margin-top: 1rem;">
                <div class="d-flex align-items-start">
                    <div class="flex-grow-1 me-2">
                        <label class="form-label small text-muted mb-1">Other Category 2 Name</label>
                        <input type="text"
                               class="form-control"
                               id="newItemName"
                               placeholder="Enter category name..."
                               maxlength="200">
                        <div class="invalid-feedback" id="addValidationError"></div>
                    </div>
                    <div style="margin-top: 1.75rem;">
                        <button type="button" class="btn btn-save btn-action me-1" id="saveNewBtn">
                            <i class="ti ti-check me-1"></i>
                            Save
                        </button>
                        <button type="button" class="btn btn-cancel btn-action" id="cancelNewBtn">
                            <i class="ti ti-x me-1"></i>
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Table -->
        <div class="category-table">
            <div class="category-table-header">
                <h6 class="mb-0">Description</h6>
            </div>
            <div class="category-table-body" id="categoryTableBody">
                <div class="empty-state" id="emptyState">
                    <i class="ti ti-folder-off"></i>
                    <p>No other categories 2 found</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this other category 2?</p>
                <p class="text-muted small mb-0">
                    <strong id="deleteItemName"></strong>
                </p>
                <p class="text-danger small mt-2 mb-0">
                    <i class="ti ti-alert-triangle me-1"></i>
                    This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/js/pages/settings/settings-inline-base.js"></script>
    <script>
        $(document).ready(function () {
            SettingsInlineEditor.create({
                entityName: 'Other Category 2',
                entityNamePlural: 'Other Categories 2',
                apiEndpoints: {
                    list: '/Helpdesk/Settings/GetOtherCategories2',
                    create: '/Helpdesk/Settings/CreateOtherCategory2',
                    update: '/Helpdesk/Settings/UpdateOtherCategory2',
                    delete: '/Helpdesk/Settings/DeleteOtherCategory2'
                }
            });
        });
    </script>
}
