@{
    ViewBag.Title = "Settings";
    ViewBag.pTitle = "Helpdesk";
    ViewBag.cTitle = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .settings-card {
            transition: all 0.3s ease;
            height: 100%;
        }

        .settings-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            border-color: #04a9f5;
        }

        .settings-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.75rem;
            margin-bottom: 1rem;
            background-color: #04a9f5;
            color: white;
        }

        .settings-card-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .settings-card-description {
            font-size: 0.875rem;
            color: #6c757d;
            margin-bottom: 1rem;
            min-height: 40px;
        }

        .settings-card-footer {
            margin-top: auto;
        }

        .btn-settings {
            width: 100%;
            transition: all 0.3s ease;
        }

        .btn-settings:hover {
            transform: translateX(5px);
        }

        .settings-section-title {
            font-size: 1.25rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e9ecef;
        }

        .card-body-settings {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        /* Dark Mode Support */
        [data-pc-theme="dark"] .settings-card-description {
            color: #9ca3af;
        }

        [data-pc-theme="dark"] .settings-section-title {
            border-bottom-color: #374151;
        }

        [data-pc-theme="dark"] .settings-icon {
            background-color: #0d6efd;
        }
    </style>
}

<div class="row">
    <div class="col-sm-12">
        <!-- Page Header -->
        <div class="page-header-title mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="m-b-10">Settings</h5>
                    <p class="m-b-0 text-muted">Manage work request configurations and system settings</p>
                </div>
            </div>
        </div>

        <!-- Core Settings -->
        <div class="mb-4">
            <h5 class="settings-section-title">
                <i class="ti ti-category me-2"></i>
                Core Settings
            </h5>
            <div class="row">
                <!-- Work Category List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon">
                                <i class="ti ti-category"></i>
                            </div>
                            <h6 class="settings-card-title">Work Category List</h6>
                            <p class="settings-card-description">
                                Manage primary work categories for classifying work requests
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/WorkCategory" class="btn btn-primary btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Other Category List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon">
                                <i class="ti ti-list"></i>
                            </div>
                            <h6 class="settings-card-title">Other Category List</h6>
                            <p class="settings-card-description">
                                Configure secondary categorization options for work requests
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/OtherCategory" class="btn btn-primary btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Other Category 2 List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon">
                                <i class="ti ti-list-check"></i>
                            </div>
                            <h6 class="settings-card-title">Other Category 2 List</h6>
                            <p class="settings-card-description">
                                Define tertiary categorization for detailed work classification
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/OtherCategory2" class="btn btn-primary btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Personnel & Assignment -->
        <div class="mb-4">
            <h5 class="settings-section-title">
                <i class="ti ti-users me-2"></i>
                Personnel & Assignment
            </h5>
            <div class="row">
                <!-- Person in Charge List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon">
                                <i class="ti ti-user-check"></i>
                            </div>
                            <h6 class="settings-card-title">Person in Charge List</h6>
                            <p class="settings-card-description">
                                Manage personnel who can be assigned as work request owners
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/PersonInCharge" class="btn btn-primary btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cost Approver Group List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon">
                                <i class="ti ti-report-money"></i>
                            </div>
                            <h6 class="settings-card-title">Cost Approver Group List</h6>
                            <p class="settings-card-description">
                                Define groups authorized to approve work request costs
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/CostApprover" class="btn btn-primary btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Workflow & Operations -->
        <div class="mb-4">
            <h5 class="settings-section-title">
                <i class="ti ti-checkup-list me-2"></i>
                Workflow & Operations
            </h5>
            <div class="row">
                <!-- Important Checklist List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon">cyan">
                                <i class="ti ti-checkbox"></i>
                            </div>
                            <h6 class="settings-card-title">Important Checklist List</h6>
                            <p class="settings-card-description">
                                Configure safety and compliance checklist items with drag-and-drop ordering
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/ImportantChecklist" class="btn btn-primary btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Priority Level Management -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon">indigo">
                                <i class="ti ti-alert-triangle"></i>
                            </div>
                            <h6 class="settings-card-title">Priority Level Management</h6>
                            <p class="settings-card-description">
                                Define priority levels and their response time targets
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/PriorityLevel" class="btn btn-primary btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Job Code Group List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon">pink">
                                <i class="ti ti-code"></i>
                            </div>
                            <h6 class="settings-card-title">Job Code Group List</h6>
                            <p class="settings-card-description">
                                Manage job code classifications for work tracking
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/JobCodeGroup" class="btn btn-primary btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Documentation & Communication -->
        <div class="mb-4">
            <h5 class="settings-section-title">
                <i class="ti ti-mail me-2"></i>
                Documentation & Communication
            </h5>
            <div class="row">
                <!-- Related Document Label List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon">teal">
                                <i class="ti ti-file-text"></i>
                            </div>
                            <h6 class="settings-card-title">Related Document Label List</h6>
                            <p class="settings-card-description">
                                Configure document type labels for file attachments in work requests
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/RelatedDocument" class="btn btn-primary btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Email Distribution List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon">yellow">
                                <i class="ti ti-mail-forward"></i>
                            </div>
                            <h6 class="settings-card-title">Email Distribution List Management</h6>
                            <p class="settings-card-description">
                                Configure email recipients for system notifications
                            </p>
                            <div class="settings-card-footer">
                                <a href="@Url.Action("EmailDistributionList", "Helpdesk")" class="btn btn-primary btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Manage
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inventory & Materials -->
        <div class="mb-4">
            <h5 class="settings-section-title">
                <i class="ti ti-package me-2"></i>
                Inventory & Materials
            </h5>
            <div class="row">
                <!-- Material Type List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon">lime">
                                <i class="ti ti-box"></i>
                            </div>
                            <h6 class="settings-card-title">Material Type List</h6>
                            <p class="settings-card-description">
                                Define material and supply categories for work requests
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/MaterialType" class="btn btn-primary btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
