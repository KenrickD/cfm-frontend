@{
    ViewBag.Title = "Settings";
    ViewBag.pTitle = "Helpdesk";
    ViewBag.cTitle = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .settings-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
        }

        .settings-card {
            transition: all 0.3s ease;
            border: 1px solid #e9ecef;
            border-radius: 0.5rem;
            height: 100%;
        }

            .settings-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
                border-color: #04a9f5;
            }

        .settings-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.75rem;
            margin-bottom: 1rem;
        }

        .icon-blue {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .icon-green {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

        .icon-orange {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            color: white;
        }

        .icon-purple {
            background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
            color: white;
        }

        .icon-red {
            background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
            color: white;
        }

        .icon-cyan {
            background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
            color: white;
        }

        .icon-indigo {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
            color: #333;
        }

        .icon-pink {
            background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
            color: white;
        }

        .icon-teal {
            background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%);
            color: white;
        }

        .icon-yellow {
            background: linear-gradient(135deg, #ff6e7f 0%, #bfe9ff 100%);
            color: white;
        }

        .icon-lime {
            background: linear-gradient(135deg, #e0c3fc 0%, #8ec5fc 100%);
            color: white;
        }

        .settings-card-title {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #2c3e50;
        }

        .settings-card-description {
            font-size: 0.875rem;
            color: #6c757d;
            margin-bottom: 1rem;
            min-height: 40px;
        }

        .settings-card-footer {
            margin-top: auto;
        }

        .btn-settings {
            width: 100%;
            background-color: #04a9f5;
            border-color: #04a9f5;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-settings:hover {
                background-color: #0396de;
                border-color: #0396de;
                color: white;
                transform: translateX(5px);
            }

        .settings-section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 1.5rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e9ecef;
        }

        .card-body-settings {
            display: flex;
            flex-direction: column;
            height: 100%;
        }
    </style>
}

<div class="row">
    <div class="col-sm-12">
        <!-- Settings Header -->
        <div class="settings-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-2">
                        <i class="ti ti-settings me-2"></i>
                        Settings
                    </h2>
                    <p class="mb-0 opacity-75">Manage work request configurations and system settings</p>
                </div>
                <div>
                    <i class="ph-duotone ph-gear" style="font-size: 4rem; opacity: 0.2;"></i>
                </div>
            </div>
        </div>

        <!-- Core Settings -->
        <div class="mb-4">
            <h5 class="settings-section-title">
                <i class="ti ti-category me-2"></i>
                Core Settings
            </h5>
            <div class="row">
                <!-- Work Category List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon icon-blue">
                                <i class="ti ti-category"></i>
                            </div>
                            <h6 class="settings-card-title">Work Category List</h6>
                            <p class="settings-card-description">
                                Manage primary work categories for classifying work requests
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/WorkCategory" class="btn btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Other Category List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon icon-green">
                                <i class="ti ti-list"></i>
                            </div>
                            <h6 class="settings-card-title">Other Category List</h6>
                            <p class="settings-card-description">
                                Configure secondary categorization options for work requests
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/OtherCategory" class="btn btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Other Category 2 List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon icon-orange">
                                <i class="ti ti-list-check"></i>
                            </div>
                            <h6 class="settings-card-title">Other Category 2 List</h6>
                            <p class="settings-card-description">
                                Define tertiary categorization for detailed work classification
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/OtherCategory2" class="btn btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Personnel & Assignment -->
        <div class="mb-4">
            <h5 class="settings-section-title">
                <i class="ti ti-users me-2"></i>
                Personnel & Assignment
            </h5>
            <div class="row">
                <!-- Person in Charge List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon icon-purple">
                                <i class="ti ti-user-check"></i>
                            </div>
                            <h6 class="settings-card-title">Person in Charge List</h6>
                            <p class="settings-card-description">
                                Manage personnel who can be assigned as work request owners
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/PersonInCharge" class="btn btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Cost Approver Group List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon icon-red">
                                <i class="ti ti-report-money"></i>
                            </div>
                            <h6 class="settings-card-title">Cost Approver Group List</h6>
                            <p class="settings-card-description">
                                Define groups authorized to approve work request costs
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/CostApprover" class="btn btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Workflow & Operations -->
        <div class="mb-4">
            <h5 class="settings-section-title">
                <i class="ti ti-checkup-list me-2"></i>
                Workflow & Operations
            </h5>
            <div class="row">
                <!-- Important Checklist List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon icon-cyan">
                                <i class="ti ti-checkbox"></i>
                            </div>
                            <h6 class="settings-card-title">Important Checklist List</h6>
                            <p class="settings-card-description">
                                Configure safety and compliance checklist items with drag-and-drop ordering
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/ImportantChecklist" class="btn btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Priority Level Management -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon icon-indigo">
                                <i class="ti ti-alert-triangle"></i>
                            </div>
                            <h6 class="settings-card-title">Priority Level Management</h6>
                            <p class="settings-card-description">
                                Define priority levels and their response time targets
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/PriorityLevel" class="btn btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Job Code Group List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon icon-pink">
                                <i class="ti ti-code"></i>
                            </div>
                            <h6 class="settings-card-title">Job Code Group List</h6>
                            <p class="settings-card-description">
                                Manage job code classifications for work tracking
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/JobCodeGroup" class="btn btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Documentation & Communication -->
        <div class="mb-4">
            <h5 class="settings-section-title">
                <i class="ti ti-mail me-2"></i>
                Documentation & Communication
            </h5>
            <div class="row">
                <!-- Related Document Label List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon icon-teal">
                                <i class="ti ti-file-text"></i>
                            </div>
                            <h6 class="settings-card-title">Related Document Label List</h6>
                            <p class="settings-card-description">
                                Configure document type labels for file attachments in work requests
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/RelatedDocument" class="btn btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Email Distribution List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon icon-yellow">
                                <i class="ti ti-mail-forward"></i>
                            </div>
                            <h6 class="settings-card-title">Email Distribution List Management</h6>
                            <p class="settings-card-description">
                                Configure email recipients for system notifications
                            </p>
                            <div class="settings-card-footer">
                                <a href="@Url.Action("EmailDistributionList", "Helpdesk")" class="btn btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Manage
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inventory & Materials -->
        <div class="mb-4">
            <h5 class="settings-section-title">
                <i class="ti ti-package me-2"></i>
                Inventory & Materials
            </h5>
            <div class="row">
                <!-- Material Type List -->
                <div class="col-lg-4 col-md-6 mb-3">
                    <div class="card settings-card">
                        <div class="card-body card-body-settings">
                            <div class="settings-icon icon-lime">
                                <i class="ti ti-box"></i>
                            </div>
                            <h6 class="settings-card-title">Material Type List</h6>
                            <p class="settings-card-description">
                                Define material and supply categories for work requests
                            </p>
                            <div class="settings-card-footer">
                                <a href="/Helpdesk/MaterialType" class="btn btn-settings btn-sm">
                                    <i class="ti ti-edit me-1"></i>
                                    Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
