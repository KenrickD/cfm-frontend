@{
    ViewBag.Title = "Priority Level Detail";
    ViewBag.pTitle = "Settings";
    ViewBag.cTitle = "Priority Level Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .page-header-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .breadcrumb-custom {
            background-color: #f8f9fa;
            padding: 0.75rem 1rem;
            border-radius: 0.25rem;
            margin-bottom: 1rem;
        }

        .detail-section {
            background: white;
            border-radius: 0.5rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
        }

        .detail-section-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e9ecef;
        }

        .detail-row {
            margin-bottom: 1rem;
        }

        .detail-label {
            font-weight: 600;
            color: #6c757d;
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
        }

        .detail-value {
            color: #2c3e50;
            font-size: 1rem;
        }

        .checkbox-indicator {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.25rem 0.75rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            margin-bottom: 0.5rem;
        }

        .checkbox-indicator.checked {
            background-color: #d4edda;
            color: #155724;
        }

        .checkbox-indicator.unchecked {
            background-color: #f8f9fa;
            color: #6c757d;
        }

        .checkbox-indicator i {
            font-size: 1rem;
        }

        .target-display {
            display: inline-block;
            padding: 0.5rem 1rem;
            background-color: #f8f9fa;
            border-radius: 0.25rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .within-office-hours-badge {
            display: inline-block;
            background-color: #e3f2fd;
            color: #1976d2;
            padding: 0.25rem 0.75rem;
            border-radius: 0.25rem;
            font-size: 0.875rem;
            margin-left: 0.5rem;
        }

        .color-preview-large {
            display: inline-block;
            width: 40px;
            height: 40px;
            border-radius: 4px;
            border: 2px solid #dee2e6;
            vertical-align: middle;
            margin-left: 0.5rem;
        }

        .compliance-duration-display {
            margin-left: 1.5rem;
            margin-top: 0.5rem;
            padding: 0.75rem;
            background-color: #f8f9fa;
            border-radius: 0.25rem;
            border-left: 3px solid #ffc107;
        }

        .empty-value {
            color: #adb5bd;
            font-style: italic;
        }
    </style>
}

<div class="row">
    <div class="col-sm-12">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Helpdesk/Settings">Settings</a></li>
