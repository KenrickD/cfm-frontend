@{
    ViewBag.Title = "Priority Level Detail";
    ViewBag.pTitle = "Priority Level Management";
    ViewBag.pTitleUrl = "/Helpdesk/PriorityLevel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .detail-header-container {
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
            color: white;
            padding: 2rem;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
        }

        .detail-header-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        .header-field {
            margin-bottom: 1rem;
        }

        .header-field-label {
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
            opacity: 0.9;
        }

        .header-field-value {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .visual-color-badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 0.25rem;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .detail-section-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .detail-section {
            background: white;
            border-radius: 0.5rem;
            padding: 1.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
        }

        [data-pc-theme="dark"] .detail-section {
            background: #2d3748;
        }

        .detail-section-title {
            font-size: 1rem;
            font-weight: 600;
            color: #3b82f6;
            margin-bottom: 1rem;
            padding-bottom: 0.5rem;
            border-bottom: 2px solid #e9ecef;
        }

        [data-pc-theme="dark"] .detail-section-title {
            color: #60a5fa;
            border-bottom-color: #4a5568;
        }

        .detail-item {
            margin-bottom: 1rem;
        }

        .detail-value {
            color: #2c3e50;
            font-size: 0.95rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        [data-pc-theme="dark"] .detail-value {
            color: #e5e7eb;
        }

        .detail-value-secondary {
            color: #6c757d;
            font-size: 0.875rem;
        }

        [data-pc-theme="dark"] .detail-value-secondary {
            color: #9ca3af;
        }

        .checkbox-list {
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
        }

        .checkbox-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.85rem;
            color: #495057;
        }

        [data-pc-theme="dark"] .checkbox-item {
            color: #d1d5db;
        }

        .checkbox-item i {
            color: #28a745;
            font-size: 1rem;
        }

        .within-office-hours-badge {
            display: inline-block;
            background-color: #e3f2fd;
            color: #1976d2;
            padding: 0.125rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            margin-left: 0.5rem;
        }

        [data-pc-theme="dark"] .within-office-hours-badge {
            background-color: #1e3a5f;
            color: #60a5fa;
        }

        .edit-button {
            min-width: 200px;
        }

        .compliance-duration-display {
            margin-top: 0.5rem;
            padding: 0.75rem;
            background-color: #fff3cd;
            border-radius: 0.25rem;
            border-left: 3px solid #ffc107;
        }

        [data-pc-theme="dark"] .compliance-duration-display {
            background-color: #3d3410;
            border-left-color: #eab308;
        }
    </style>
}

<div class="row">
    <div class="col-sm-12">
        <!-- Detail Header -->
        <div class="detail-header-container">
            <div class="detail-header-title">Priority Level Detail</div>

            <!-- Name -->
            <div class="header-field">
                <div class="header-field-label">Name</div>
                <div class="header-field-value" id="name">-</div>
            </div>

            <!-- Visual Color -->
            <div class="header-field">
                <div class="header-field-label">Visual Color</div>
                <span id="visualColorBadge" class="visual-color-badge">-</span>
            </div>
        </div>

        <!-- First Row: Helpdesk Response, Quotation Submission, Work Completion -->
        <div class="detail-section-grid">
            <!-- Helpdesk Response Target -->
            <div class="detail-section">
                <h5 class="detail-section-title">Helpdesk Response Target</h5>
                <div class="detail-item">
                    <div class="detail-value" id="helpdeskResponseTarget">-</div>
                    <div class="detail-value-secondary" id="helpdeskResponseReference">-</div>
                </div>
                <div class="checkbox-list" id="helpdeskResponseCheckboxes"></div>
                <div id="helpdeskComplianceDurationDisplay" style="display: none;">
                    <div class="compliance-duration-display">
                        <div class="detail-value" id="helpdeskComplianceDuration">-</div>
                    </div>
                </div>
            </div>

            <!-- Quotation Submission Target -->
            <div class="detail-section">
                <h5 class="detail-section-title">Quotation Submission Target</h5>
                <div class="detail-item">
                    <div class="detail-value" id="quotationSubmissionTarget">-</div>
                    <div class="detail-value-secondary" id="quotationSubmissionReference">-</div>
                </div>
                <div class="checkbox-list" id="quotationSubmissionCheckboxes"></div>
            </div>

            <!-- Work Completion Target -->
            <div class="detail-section">
                <h5 class="detail-section-title">Work Completion Target</h5>
                <div class="detail-item">
                    <div class="detail-value" id="workCompletionTarget">-</div>
                    <div class="detail-value-secondary" id="workCompletionReference">-</div>
                </div>
                <div class="checkbox-list" id="workCompletionCheckboxes"></div>
            </div>
        </div>

        <!-- Second Row: Initial Follow Up, Cost Approval, After Work Follow Up -->
        <div class="detail-section-grid">
            <!-- Initial Follow Up Target -->
            <div class="detail-section">
                <h5 class="detail-section-title">Initial Follow Up Target</h5>
                <div class="detail-item">
                    <div class="detail-value" id="initialFollowUpTarget">-</div>
                    <div class="detail-value-secondary" id="initialFollowUpReference">-</div>
                </div>
                <div class="checkbox-list" id="initialFollowUpCheckboxes"></div>
            </div>

            <!-- Cost Approval Target -->
            <div class="detail-section">
                <h5 class="detail-section-title">Cost Approval Target</h5>
                <div class="detail-item">
                    <div class="detail-value" id="costApprovalTarget">-</div>
                    <div class="detail-value-secondary" id="costApprovalReference">-</div>
                </div>
                <div class="checkbox-list" id="costApprovalCheckboxes"></div>
            </div>

            <!-- After Work Follow Up Target -->
            <div class="detail-section">
                <h5 class="detail-section-title">After Work Follow Up Target</h5>
                <div class="detail-item">
                    <div class="detail-value" id="afterWorkFollowUpTarget">-</div>
                    <div class="detail-value-secondary" id="afterWorkFollowUpReference">-</div>
                </div>
                <div class="checkbox-list" id="afterWorkFollowUpCheckboxes"></div>
            </div>
        </div>

        <!-- Edit Button -->
        <div class="detail-section">
            <a href="/Helpdesk/PriorityLevelEdit" id="editButton" class="btn btn-primary edit-button">
                <i class="ti ti-edit me-1"></i>
                Edit this Priority Level
            </a>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/js/pages/settings/priority-level-detail.js"></script>
}
