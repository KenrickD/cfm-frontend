@{
    ViewBag.Title = "Cost Approver Group Management";
    ViewBag.pTitle = "Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .stats-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
            padding: 1rem;
            background-color: #f8f9fa;
            border-radius: 0.25rem;
        }

        [data-pc-theme="dark"] .stats-section {
            background-color: #2d3748;
        }

        .total-count {
            font-size: 0.9rem;
            color: #495057;
        }

        [data-pc-theme="dark"] .total-count {
            color: #cbd5e0;
        }

        .approver-table {
            background: white;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 0.125rem 0.25rem rgba(0,0,0,.075);
        }

        [data-pc-theme="dark"] .approver-table {
            background: #2d3748;
        }

        .approver-table-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0.75rem 1rem;
            font-weight: 600;
            font-size: 0.875rem;
        }

        .approver-table-body {
            max-height: none;
        }

        .approver-row {
            padding: 1rem;
            border-bottom: 1px solid #dee2e6;
            transition: background-color 0.2s;
        }

        [data-pc-theme="dark"] .approver-row {
            border-bottom-color: #4a5568;
        }

        .approver-row:hover {
            background-color: #f8f9fa;
        }

        [data-pc-theme="dark"] .approver-row:hover {
            background-color: #374151;
        }

        .approver-row:last-child {
            border-bottom: none;
        }

        .approver-name {
            font-weight: 600;
            color: #2c3e50;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }

        [data-pc-theme="dark"] .approver-name {
            color: #e5e7eb;
        }

        .approver-name:hover {
            color: #667eea;
            text-decoration: underline;
        }

        .property-info {
            font-size: 0.875rem;
            color: #495057;
        }

        [data-pc-theme="dark"] .property-info {
            color: #9ca3af;
        }

        .category-badge {
            display: inline-block;
            background-color: #e3f2fd;
            color: #1976d2;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            margin-right: 0.25rem;
            margin-bottom: 0.25rem;
        }

        .flow-badge {
            display: inline-block;
            background-color: #f3e5f5;
            color: #7b1fa2;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            margin-right: 0.25rem;
            margin-bottom: 0.25rem;
        }

        .range-value {
            font-size: 0.875rem;
            color: #6c757d;
            font-family: 'Courier New', monospace;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
            justify-content: flex-end;
        }

        .btn-action {
            width: 36px;
            height: 36px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 0.25rem;
        }

        .btn-edit {
            background-color: #04a9f5;
            border-color: #04a9f5;
            color: white;
        }

        .btn-edit:hover {
            background-color: #0396de;
            border-color: #0396de;
            color: white;
        }

        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

        .btn-delete:hover {
            background-color: #c82333;
            border-color: #bd2130;
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 3rem;
            color: #6c757d;
        }

        [data-pc-theme="dark"] .empty-state {
            color: #9ca3af;
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .scrollable-cell {
            max-height: 120px;
            overflow-y: auto;
            padding-right: 0.5rem;
        }

        .scrollable-cell::-webkit-scrollbar {
            width: 6px;
        }

        .scrollable-cell::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 3px;
        }

        [data-pc-theme="dark"] .scrollable-cell::-webkit-scrollbar-track {
            background: #374151;
        }

        .scrollable-cell::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 3px;
        }

        [data-pc-theme="dark"] .scrollable-cell::-webkit-scrollbar-thumb {
            background: #6b7280;
        }

        .scrollable-cell::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        [data-pc-theme="dark"] .scrollable-cell::-webkit-scrollbar-thumb:hover {
            background: #9ca3af;
        }
    </style>
}

<div class="row">
    <div class="col-sm-12">
        <!-- Page Header -->
        <div class="page-header-title mb-3">
            <h4 class="mb-2">
                <i class="ti ti-users me-2"></i>List of Cost Approver Group
            </h4>
            <p class="text-muted mb-3">Manage cost approver groups for work request approval flows</p>
            <div class="d-flex gap-2">
                <a href="/Helpdesk/Settings" class="btn btn-light btn-sm">
                    <i class="ti ti-arrow-left me-1"></i>
                    Back to Settings
                </a>
                <a href="/Helpdesk/CostApproverAdd" class="btn btn-primary btn-sm">
                    <i class="ti ti-plus me-1"></i>
                    Add New Cost Approver Group
                </a>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="stats-section">
            <div class="total-count">
                Showing total of <strong><span id="totalCount">0</span></strong> cost approver groups
            </div>
        </div>

        <!-- Cost Approver Table -->
        <div class="approver-table">
            <div class="approver-table-header">
                <div class="row">
                    <div class="col-md-3">Cost Approver Group Name</div>
                    <div class="col-md-2">Property</div>
                    <div class="col-md-2">Work Category</div>
                    <div class="col-md-2">Approval Flow</div>
                    <div class="col-md-2">Range Value</div>
                    <div class="col-md-1 text-end">Actions</div>
                </div>
            </div>
            <div class="approver-table-body" id="approverTableBody">
                <div class="empty-state" id="emptyState">
                    <i class="ti ti-users-off"></i>
                    <p>No cost approver groups found</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this cost approver group?</p>
                <p class="text-muted small mb-0">
                    <strong id="deleteApproverName"></strong>
                </p>
                <p class="text-danger small mt-2 mb-0">
                    <i class="ti ti-alert-triangle me-1"></i>
                    This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/js/pages/settings/cost-approver.js"></script>
}
