@model cfm_frontend.ViewModels.PersonInChargeViewModel

@{
    ViewBag.Title = "Person in Charge List";
    ViewBag.pTitle = "Settings";
    ViewBag.cTitle = "Person in Charge List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/assets/css/settings-inline-editor.css" />
    <style>
        .pic-list-item {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e9ecef;
            transition: background-color 0.2s;
        }

        [data-pc-theme="dark"] .pic-list-item {
            border-bottom-color: #4a5568;
        }

        .pic-list-item:hover {
            background-color: #f8f9fa;
        }

        [data-pc-theme="dark"] .pic-list-item:hover {
            background-color: #374151;
        }

        .pic-info {
            flex: 1;
        }

        .pic-name {
            font-size: 1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.25rem;
        }

        [data-pc-theme="dark"] .pic-name {
            color: #e5e7eb;
        }

        .pic-property-count {
            font-size: 0.875rem;
            color: #6c757d;
        }

        [data-pc-theme="dark"] .pic-property-count {
            color: #9ca3af;
        }

        .pic-property-count .badge {
            background-color: #04a9f5;
            color: white;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-weight: 500;
        }

        .pic-actions {
            display: flex;
            gap: 0.5rem;
        }

        /* Dual Listbox Styles */
        .dual-listbox-container {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        .listbox-panel {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .listbox-panel label {
            font-size: 0.875rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .listbox {
            flex: 1;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            padding: 0.5rem;
            min-height: 300px;
            max-height: 400px;
            overflow-y: auto;
            background-color: #fff;
        }

        [data-pc-theme="dark"] .listbox {
            background-color: #374151;
            border-color: #4a5568;
        }

        .listbox-item {
            padding: 0.5rem 0.75rem;
            margin-bottom: 0.25rem;
            border-radius: 0.25rem;
            cursor: pointer;
            transition: all 0.2s;
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
        }

        [data-pc-theme="dark"] .listbox-item {
            background-color: #2d3748;
            border-color: #4a5568;
            color: #cbd5e0;
        }

        .listbox-item:hover {
            background-color: #e9ecef;
            border-color: #04a9f5;
        }

        [data-pc-theme="dark"] .listbox-item:hover {
            background-color: #4a5568;
        }

        .listbox-item.selected {
            background-color: #04a9f5;
            color: white;
            border-color: #0396de;
        }

        .listbox-controls {
            display: flex;
            flex-direction: column;
            justify-content: center;
            gap: 0.5rem;
        }

        .listbox-controls .btn {
            padding: 0.5rem 1rem;
            min-width: 100px;
        }

        /* Employee Search Styles */
        .employee-search-container {
            position: relative;
        }

        .employee-search-results {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: white;
            border: 1px solid #ced4da;
            border-top: none;
            border-radius: 0 0 0.375rem 0.375rem;
            max-height: 200px;
            overflow-y: auto;
            z-index: 1000;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            display: none;
        }

        [data-pc-theme="dark"] .employee-search-results {
            background: #2d3748;
            border-color: #4a5568;
        }

        .employee-search-results.show {
            display: block;
        }

        .employee-search-item {
            padding: 0.75rem 1rem;
            cursor: pointer;
            border-bottom: 1px solid #f1f1f1;
            transition: background-color 0.2s;
        }

        [data-pc-theme="dark"] .employee-search-item {
            border-bottom-color: #4a5568;
        }

        .employee-search-item:hover {
            background-color: #f8f9fa;
        }

        [data-pc-theme="dark"] .employee-search-item:hover {
            background-color: #374151;
        }

        .employee-search-item:last-child {
            border-bottom: none;
        }

        .employee-search-item strong {
            display: block;
            margin-bottom: 0.25rem;
        }

        .employee-search-item small {
            display: block;
            line-height: 1.4;
        }

        /* Employee Card Styles (matches requestor card pattern) */
        .employee-card {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-left: 4px solid #667eea;
            border-radius: 0.375rem;
            padding: 1rem;
            transition: all 0.3s ease;
        }

        [data-pc-theme="dark"] .employee-card {
            background-color: #2d3748;
            border-color: #4a5568;
            border-left-color: #667eea;
        }

        .avatar-circle {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            font-weight: 600;
            color: white;
            flex-shrink: 0;
            text-transform: uppercase;
        }

        .employee-card h6 {
            font-size: 0.95rem;
            font-weight: 600;
            color: #2c3e50;
        }

        [data-pc-theme="dark"] .employee-card h6 {
            color: #e5e7eb;
        }

        .employee-card-details {
            font-size: 0.8rem;
            color: #6c757d;
            line-height: 1.5;
        }

        [data-pc-theme="dark"] .employee-card-details {
            color: #9ca3af;
        }

        .employee-card-details div {
            margin-bottom: 0.125rem;
        }

        /* Offcanvas Custom Styles */
        .offcanvas-custom {
            width: 600px !important;
        }

        .offcanvas-header-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem;
        }

        .offcanvas-body-custom {
            padding: 1.5rem;
        }

        .form-section {
            margin-bottom: 1.5rem;
        }

        .form-section-title {
            font-size: 0.875rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .locked-field {
            background-color: #f8f9fa;
            cursor: not-allowed;
        }

        /* Property section initially hidden in Add mode until employee is selected */
        .property-section-hidden {
            display: none;
        }
    </style>
}

<div class="row">
    <div class="col-sm-12">
        <!-- Page Header -->
        <div class="page-header-title mb-3">
            <h4 class="mb-2">
                <i class="ti ti-user-check me-2"></i>Person in Charge List
            </h4>
            <p class="text-muted mb-3">Manage personnel who can be assigned as work request owners</p>
            <div>
                <a href="/Helpdesk/Settings" class="btn btn-light btn-sm">
                    <i class="ti ti-arrow-left me-1"></i>
                    Back to Settings
                </a>
            </div>
        </div>

        <!-- Stats and Search -->
        <div class="stats-section">
            <div class="total-count">
                @if (Model?.Paging != null && Model.Paging.TotalCount > 0)
                {
                    var startRecord = (Model.Paging.CurrentPage - 1) * Model.Paging.PageSize + 1;
                    var endRecord = Math.Min(Model.Paging.CurrentPage * Model.Paging.PageSize, Model.Paging.TotalCount);
                    <span>Showing <strong>@startRecord</strong> to <strong>@endRecord</strong> of <strong>@Model.Paging.TotalCount</strong> Persons in Charge</span>
                }
                else
                {
                    <span>Showing total of <strong>0</strong> Persons in Charge</span>
                }
            </div>
            <div class="search-box">
                <div class="input-group">
                    <input type="text"
                           class="form-control form-control-sm"
                           id="searchInput"
                           placeholder="Search persons in charge..."
                           value="@Model?.SearchKeyword">
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="searchBtn">
                        <i class="ti ti-search"></i>
                    </button>
                    @if (!string.IsNullOrEmpty(Model?.SearchKeyword))
                    {
                        <button type="button" class="btn btn-outline-secondary btn-sm" id="clearSearchBtn">
                            <i class="ti ti-x"></i>
                        </button>
                    }
                </div>
            </div>
        </div>

        <!-- Add New Section -->
        <div class="add-new-section">
            <button type="button" class="btn btn-primary" id="showAddDrawerBtn">
                <i class="ti ti-plus me-1"></i>
                Add New Person in Charge
            </button>
        </div>

        <!-- PIC Table -->
        <div class="category-table">
            <div class="category-table-header">
                <div class="row">
                    <div class="col-6">
                        <h6 class="mb-0">Name</h6>
                    </div>
                    <div class="col-3">
                        <h6 class="mb-0">Properties</h6>
                    </div>
                    <div class="col-3 text-end">
                        <h6 class="mb-0">Actions</h6>
                    </div>
                </div>
            </div>
            <div class="category-table-body" id="picTableBody">
                @if (Model?.PersonsInCharge != null && Model.PersonsInCharge.Any())
                {
                    foreach (var pic in Model.PersonsInCharge)
                    {
                        <div class="pic-list-item" data-employee-id="@pic.IdEmployee">
                            <div class="pic-info">
                                <div class="pic-name">@pic.FullName</div>
                                <div class="pic-property-count">
                                    <i class="ti ti-building me-1"></i>
                                    <span class="badge">@pic.TotalAssignedProperties</span> / @pic.TotalProperties properties
                                </div>
                            </div>
                            <div class="pic-actions">
                                <button type="button" class="btn btn-edit btn-action btn-sm btn-edit-pic"
                                        data-employee-id="@pic.IdEmployee">
                                    <i class="ti ti-edit me-1"></i>Edit
                                </button>
                                <button type="button" class="btn btn-delete btn-action btn-sm btn-delete-pic"
                                        data-employee-id="@pic.IdEmployee"
                                        data-employee-name="@pic.FullName">
                                    <i class="ti ti-trash me-1"></i>Delete
                                </button>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="empty-state" id="emptyState">
                        <i class="ti ti-user-off"></i>
                        <p>No persons in charge found</p>
                    </div>
                }
            </div>
        </div>

        <!-- Pagination -->
        @if (Model?.Paging != null)
        {
            @await Html.PartialAsync("_Pagination", Model.Paging)
        }
    </div>
</div>

<!-- Add PIC Offcanvas -->
<div class="offcanvas offcanvas-end offcanvas-custom" tabindex="-1" id="addPICOffcanvas">
    <div class="offcanvas-header offcanvas-header-custom">
        <h5 class="offcanvas-title">
            <i class="ti ti-user-plus me-2"></i>
            Add Person in Charge
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body offcanvas-body-custom">
        <!-- Employee Search Section -->
        <div class="form-section">
            <div class="form-section-title">Select Employee</div>
            <input type="hidden" id="selectedEmployeeId" />

            <!-- Search container (visible when no employee selected) -->
            <div id="employeeSearchContainer" class="employee-search-container">
                <input type="text"
                       class="form-control"
                       id="employeeSearchInput"
                       placeholder="Search employee by name..."
                       autocomplete="off">
                <div class="employee-search-results" id="employeeSearchResults"></div>
            </div>

            <!-- Employee card (hidden until selected) -->
            <div id="employeeCard" class="employee-card" style="display: none;">
                <div class="d-flex align-items-start">
                    <div class="avatar-circle me-3" id="employeeAvatar">
                        <span id="employeeInitials"></span>
                    </div>
                    <div class="flex-grow-1 min-width-0">
                        <div class="d-flex justify-content-between align-items-start mb-1">
                            <h6 class="mb-0 fw-semibold text-truncate" id="employeeCardName"></h6>
                            <button type="button"
                                    class="btn btn-sm btn-link text-danger p-0 ms-2"
                                    id="clearEmployeeBtn"
                                    title="Remove selection">
                                <i class="ti ti-x"></i>
                            </button>
                        </div>
                        <div class="employee-card-details" id="employeeCardDetails"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Property Assignment Section (hidden until employee selected) -->
        <div class="form-section property-section-hidden" id="addPropertySection">
            <div class="form-section-title">Assign Properties</div>
            <div class="dual-listbox-container">
                <!-- Available Properties -->
                <div class="listbox-panel">
                    <label>Available Properties</label>
                    <input type="text"
                           class="form-control form-control-sm mb-2"
                           id="availablePropertiesSearch"
                           placeholder="Search...">
                    <div class="listbox" id="availablePropertiesListbox"></div>
                </div>

                <!-- Transfer Controls -->
                <div class="listbox-controls">
                    <button type="button" class="btn btn-primary btn-sm" id="addPropertiesBtn" title="Add selected properties">
                        <i class="ti ti-chevron-right"></i>
                    </button>
                    <button type="button" class="btn btn-primary btn-sm" id="addAllPropertiesBtn" title="Add all properties">
                        <i class="ti ti-chevrons-right"></i>
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm" id="removePropertiesBtn" title="Remove selected properties">
                        <i class="ti ti-chevron-left"></i>
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm" id="removeAllPropertiesBtn" title="Remove all properties">
                        <i class="ti ti-chevrons-left"></i>
                    </button>
                </div>

                <!-- Assigned Properties -->
                <div class="listbox-panel">
                    <label>Assigned Properties</label>
                    <input type="text"
                           class="form-control form-control-sm mb-2"
                           id="assignedPropertiesSearch"
                           placeholder="Search...">
                    <div class="listbox" id="assignedPropertiesListbox"></div>
                </div>
            </div>
        </div>

        <!-- Footer Actions -->
        <div class="mt-4 d-flex gap-2">
            <button type="button" class="btn btn-primary flex-fill" id="savePICBtn">
                <i class="ti ti-check me-1"></i>
                Save Person in Charge
            </button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="offcanvas">
                <i class="ti ti-x me-1"></i>
                Cancel
            </button>
        </div>
    </div>
</div>

<!-- Edit PIC Offcanvas -->
<div class="offcanvas offcanvas-end offcanvas-custom" tabindex="-1" id="editPICOffcanvas">
    <div class="offcanvas-header offcanvas-header-custom">
        <h5 class="offcanvas-title">
            <i class="ti ti-edit me-2"></i>
            Edit Person in Charge
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body offcanvas-body-custom">
        <!-- Employee Name (Locked) -->
        <div class="form-section">
            <div class="form-section-title">Employee</div>
            <input type="text"
                   class="form-control locked-field"
                   id="editEmployeeName"
                   readonly>
            <small class="text-muted">
                <i class="ti ti-lock me-1"></i>
                Employee cannot be changed once assigned
            </small>
        </div>

        <!-- Property Assignment Section -->
        <div class="form-section">
            <div class="form-section-title">Assign Properties</div>
            <div class="dual-listbox-container">
                <!-- Available Properties -->
                <div class="listbox-panel">
                    <label>Available Properties</label>
                    <input type="text"
                           class="form-control form-control-sm mb-2"
                           id="editAvailablePropertiesSearch"
                           placeholder="Search...">
                    <div class="listbox" id="editAvailablePropertiesListbox"></div>
                </div>

                <!-- Transfer Controls -->
                <div class="listbox-controls">
                    <button type="button" class="btn btn-primary btn-sm" id="editAddPropertiesBtn" title="Add selected properties">
                        <i class="ti ti-chevron-right"></i>
                    </button>
                    <button type="button" class="btn btn-primary btn-sm" id="editAddAllPropertiesBtn" title="Add all properties">
                        <i class="ti ti-chevrons-right"></i>
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm" id="editRemovePropertiesBtn" title="Remove selected properties">
                        <i class="ti ti-chevron-left"></i>
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm" id="editRemoveAllPropertiesBtn" title="Remove all properties">
                        <i class="ti ti-chevrons-left"></i>
                    </button>
                </div>

                <!-- Assigned Properties -->
                <div class="listbox-panel">
                    <label>Assigned Properties</label>
                    <input type="text"
                           class="form-control form-control-sm mb-2"
                           id="editAssignedPropertiesSearch"
                           placeholder="Search...">
                    <div class="listbox" id="editAssignedPropertiesListbox"></div>
                </div>
            </div>
        </div>

        <!-- Footer Actions -->
        <div class="mt-4 d-flex gap-2">
            <button type="button" class="btn btn-primary flex-fill" id="updatePICBtn">
                <i class="ti ti-check me-1"></i>
                Update Person in Charge
            </button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="offcanvas">
                <i class="ti ti-x me-1"></i>
                Cancel
            </button>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this person in charge?</p>
                <p class="text-muted small mb-0">
                    <strong id="deleteItemName"></strong>
                </p>
                <p class="text-danger small mt-2 mb-0">
                    <i class="ti ti-alert-triangle me-1"></i>
                    This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        window.currentPage = @(Model?.Paging?.CurrentPage ?? 1);
        window.searchKeyword = '@Html.Raw(Model?.SearchKeyword ?? "")';

        window.PageContext = {
            idClient: @(Model?.IdClient ?? 0),
            idCompany: @(Model?.IdCompany ?? 0)
        };
    </script>
    <script src="~/assets/js/helpers/client-session-monitor.js"></script>
    <script src="~/assets/js/pages/settings/person-in-charge.js"></script>
}
