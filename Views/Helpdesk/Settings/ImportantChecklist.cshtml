@{
    ViewBag.Title = "Important Checklist";
    ViewBag.pTitle = "Settings";
    ViewBag.cTitle = "Important Checklist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="~/assets/css/settings-inline-editor.css" />
    <link rel="stylesheet" href="~/assets/css/plugins/dragula.min.css" />
    <style>
        .drag-handle {
            cursor: move;
            color: #6c757d;
            margin-right: 0.5rem;
        }
        .category-row.gu-mirror {
            opacity: 0.8;
            background-color: #f8f9fa;
        }
        .category-row.gu-transit {
            opacity: 0.2;
        }
        .display-order-badge {
            display: inline-block;
            min-width: 2rem;
            text-align: center;
            font-size: 0.875rem;
            color: #6c757d;
        }
    </style>
}

<div class="row">
    <div class="col-sm-12">
        <!-- Page Header -->
        <div class="page-header-custom mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-1">
                        <i class="ti ti-checklist me-2"></i>
                        Important Checklist
                    </h4>
                    <p class="mb-0 opacity-75">Manage checklist items shown in work request forms</p>
                </div>
                <div>
                    <a href="/Helpdesk/Settings" class="btn btn-light btn-sm">
                        <i class="ti ti-arrow-left me-1"></i>
                        Back to Settings
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats and Search -->
        <div class="stats-section">
            <div class="total-count">
                Showing total of <strong><span id="totalCount">0</span></strong> Important Checklist Items
            </div>
            <div class="search-box">
                <input type="text"
                       class="form-control form-control-sm"
                       id="searchInput"
                       placeholder="Search checklist items...">
            </div>
        </div>

        <!-- Add New Section -->
        <div class="add-new-section" id="addNewSection">
            <div class="d-flex align-items-start">
                <div class="flex-grow-1">
                    <button type="button" class="btn btn-primary" id="showAddFormBtn">
                        <i class="ti ti-plus me-1"></i>
                        Add New Checklist Item
                    </button>
                </div>
            </div>
            <div id="addNewForm" style="display: none; margin-top: 1rem;">
                <div class="d-flex align-items-start">
                    <div class="flex-grow-1 me-2">
                        <label class="form-label small text-muted mb-1">Checklist Item Name</label>
                        <input type="text"
                               class="form-control"
                               id="newItemName"
                               placeholder="Enter checklist item name..."
                               maxlength="200">
                        <div class="invalid-feedback" id="addValidationError"></div>
                    </div>
                    <div style="margin-top: 1.75rem;">
                        <button type="button" class="btn btn-save btn-action me-1" id="saveNewBtn">
                            <i class="ti ti-check me-1"></i>
                            Save
                        </button>
                        <button type="button" class="btn btn-cancel btn-action" id="cancelNewBtn">
                            <i class="ti ti-x me-1"></i>
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reorder Instructions -->
        <div class="alert alert-info d-flex align-items-center" role="alert">
            <i class="ti ti-info-circle me-2"></i>
            <div>
                <strong>Tip:</strong> Drag and drop items using the <i class="ti ti-grip-vertical"></i> handle to reorder them.
                Changes are saved automatically.
            </div>
        </div>

        <!-- Checklist Table -->
        <div class="category-table">
            <div class="category-table-header">
                <div class="row">
                    <div class="col-1 text-center">#</div>
                    <div class="col-10">Description</div>
                    <div class="col-1"></div>
                </div>
            </div>
            <div class="category-table-body" id="checklistTableBody">
                <div class="empty-state" id="emptyState">
                    <i class="ti ti-checklist"></i>
                    <p>No checklist items found</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this checklist item?</p>
                <p class="text-muted small mb-0">
                    <strong id="deleteItemName"></strong>
                </p>
                <p class="text-danger small mt-2 mb-0">
                    <i class="ti ti-alert-triangle me-1"></i>
                    This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/js/plugins/dragula.min.js"></script>
    <script src="~/assets/js/pages/settings/important-checklist.js"></script>
}
