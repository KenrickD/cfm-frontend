@model List<cfm_frontend.Models.WorkRequest.WorkRequestFilterModel.WorkCategoryModel>

@{
    ViewBag.Title = "Work Category List";
    ViewBag.pTitle = "Settings";
    ViewBag.cTitle = "Work Category List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <style>
        .page-header-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 1.5rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .category-table {
            background: white;
            border-radius: 0.5rem;
            overflow: hidden;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        }

        .category-table-header {
            background-color: #f8f9fa;
            padding: 1rem 1.5rem;
            border-bottom: 2px solid #e9ecef;
        }

        .category-table-body {
            padding: 0;
        }

        .category-row {
            display: flex;
            align-items: center;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid #e9ecef;
            transition: background-color 0.2s;
        }

            .category-row:hover {
                background-color: #f8f9fa;
            }

            .category-row.editing {
                background-color: #e7f3ff;
            }

            .category-row.adding {
                background-color: #fff3cd;
            }

        .category-description {
            flex: 1;
            font-size: 0.95rem;
            color: #2c3e50;
        }

        .category-actions {
            display: flex;
            gap: 0.5rem;
        }

        .category-input {
            flex: 1;
            margin-right: 1rem;
        }

        .btn-action {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
            border-radius: 0.25rem;
            transition: all 0.2s;
        }

        .btn-edit {
            background-color: #04a9f5;
            border-color: #04a9f5;
            color: white;
        }

            .btn-edit:hover {
                background-color: #0396de;
                border-color: #0396de;
                color: white;
            }

        .btn-delete {
            background-color: #dc3545;
            border-color: #dc3545;
            color: white;
        }

            .btn-delete:hover {
                background-color: #c82333;
                border-color: #bd2130;
                color: white;
            }

        .btn-save {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
        }

            .btn-save:hover {
                background-color: #218838;
                border-color: #1e7e34;
                color: white;
            }

        .btn-cancel {
            background-color: #6c757d;
            border-color: #6c757d;
            color: white;
        }

            .btn-cancel:hover {
                background-color: #5a6268;
                border-color: #545b62;
                color: white;
            }

        .add-new-section {
            padding: 1.5rem;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
        }

        .stats-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .total-count {
            font-size: 0.95rem;
            color: #6c757d;
        }

            .total-count strong {
                color: #2c3e50;
                font-size: 1.1rem;
            }

        .search-box {
            max-width: 300px;
        }

        .empty-state {
            text-align: center;
            padding: 3rem 1rem;
            color: #6c757d;
        }

            .empty-state i {
                font-size: 3rem;
                margin-bottom: 1rem;
                opacity: 0.3;
            }

        .invalid-feedback {
            display: block;
            margin-top: 0.25rem;
        }

        .breadcrumb-custom {
            background-color: transparent;
            padding: 0;
            margin-bottom: 1rem;
        }

            .breadcrumb-custom .breadcrumb-item {
                font-size: 0.875rem;
            }

                .breadcrumb-custom .breadcrumb-item a {
                    color: #04a9f5;
                    text-decoration: none;
                }

                    .breadcrumb-custom .breadcrumb-item a:hover {
                        text-decoration: underline;
                    }

                .breadcrumb-custom .breadcrumb-item.active {
                    color: #6c757d;
                }
    </style>
}

<div class="row">
    <div class="col-sm-12">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb breadcrumb-custom">
                <li class="breadcrumb-item"><a href="/Helpdesk/Settings">Settings</a></li>
                <li class="breadcrumb-item active" aria-current="page">Work Category List</li>
            </ol>
        </nav>

        <!-- Page Header -->
        <div class="page-header-custom">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-1">
                        <i class="ti ti-category me-2"></i>
                        List of Work Category
                    </h4>
                    <p class="mb-0 opacity-75">Manage work categories for classifying work requests</p>
                </div>
                <div>
                    <a href="/Helpdesk/Settings" class="btn btn-light btn-sm">
                        <i class="ti ti-arrow-left me-1"></i>
                        Back to Settings
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats and Search -->
        <div class="stats-section">
            <div class="total-count">
                Showing total of <strong><span id="totalCount">0</span></strong> Work Categories
            </div>
            <div class="search-box">
                <input type="text"
                       class="form-control form-control-sm"
                       id="searchInput"
                       placeholder="Search categories...">
            </div>
        </div>

        <!-- Add New Section -->
        <div class="add-new-section" id="addNewSection">
            <div class="d-flex align-items-start">
                <div class="flex-grow-1">
                    <button type="button" class="btn btn-primary" id="showAddFormBtn">
                        <i class="ti ti-plus me-1"></i>
                        Add New Work Category
                    </button>
                </div>
            </div>
            <div id="addNewForm" style="display: none; margin-top: 1rem;">
                <div class="d-flex align-items-start">
                    <div class="flex-grow-1 me-2">
                        <label class="form-label small text-muted mb-1">Work Category Name</label>
                        <input type="text"
                               class="form-control"
                               id="newCategoryName"
                               placeholder="Enter category name..."
                               maxlength="200">
                        <div class="invalid-feedback" id="addValidationError"></div>
                    </div>
                    <div style="margin-top: 1.75rem;">
                        <button type="button" class="btn btn-save btn-action me-1" id="saveNewBtn">
                            <i class="ti ti-check me-1"></i>
                            Save
                        </button>
                        <button type="button" class="btn btn-cancel btn-action" id="cancelNewBtn">
                            <i class="ti ti-x me-1"></i>
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Table -->
        <div class="category-table">
            <div class="category-table-header">
                <h6 class="mb-0">Description</h6>
            </div>
            <div class="category-table-body" id="categoryTableBody">
                <!-- Categories will be loaded here -->
                <div class="empty-state" id="emptyState">
                    <i class="ti ti-folder-off"></i>
                    <p>No work categories found</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this work category?</p>
                <p class="text-muted small mb-0">
                    <strong id="deleteItemName"></strong>
                </p>
                <p class="text-danger small mt-2 mb-0">
                    <i class="ti ti-alert-triangle me-1"></i>
                    This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/js/pages/settings/work-category.js"></script>
}
